{
  "manifest_version": 3,
  "name": "AI Chat Exporter (Ultimate)",
  "version": "0.13.0",
  "description": "Industrial-grade multi-platform chat extraction. Secure local-first architecture. No external APIs.",
  "action": {
    "default_popup": "index.html",
    "default_title": "AI Chat Exporter"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "downloads",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "optional_host_permissions": [
    "*://gemini.google.com/*",
    "*://lh3.googleusercontent.com/*",
    "*://lh3.google.com/*",
    "*://aistudio.google.com/*",
    "*://*.oaiusercontent.com/*",
    "*://*.oaistatic.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*",
        "*://aistudio.google.com/*"
      ],
      "js": [
        "lib/extractors/utils.mjs",
        "lib/extractors/chatgpt.mjs",
        "lib/extractors/claude.mjs",
        "lib/extractors/gemini.mjs",
        "lib/extractors/aistudio.mjs",
        "lib/extractors/index.mjs",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf_render.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}