{
  "manifest_version": 3,
  "name": "AI Chat Exporter (Developer Edition)",
  "version": "0.9.9",
  "description": "Industrial-grade multi-platform chat extraction. Isolated tab processing, advanced formatting, and secure local-first architecture.",
  "action": {
    "default_popup": "index.html",
    "default_title": "AI Chat Exporter"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs", "downloads"],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*", 
        "*://gemini.google.com/*", 
        "*://claude.ai/*",
        "*://aistudio.google.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}