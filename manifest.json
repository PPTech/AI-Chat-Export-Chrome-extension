{
  "manifest_version": 3,
  "name": "AI Chat Exporter (Ultimate)",
  "version": "0.12.11",
  "description": "AEGIS-2026 local-only autonomous extractor with self-healing and secure artifact export.",
  "action": {
    "default_popup": "index.html",
    "default_title": "AI Chat Exporter"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "downloads",
    "webRequest",
    "offscreen"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://aistudio.google.com/*",
    "https://*.chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*",
        "*://aistudio.google.com/*",
        "*://*.chatgpt.com/*"
      ],
      "js": [
        "security_guard.js",
        "smart_vision.js",
        "offline_brain.js",
        "logger.js",
        "export_core.js",
        "visual_walker.js",
        "asset_processor.js",
        "smart_miner.js",
        "smart_agent.js",
        "visual_engine.js",
        "artifact_builder.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "offscreen.html",
        "offscreen.js",
        "ai_engine.js",
        "recipes_store.js",
        "models/*",
        "lib/*",
        "export_manager.js",
        "smart_vision.js",
        "security_guard.js",
        "offline_brain.js",
        "export_core.js",
        "logger.js",
        "visual_engine.js",
        "artifact_builder.js"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*",
        "https://*.chatgpt.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://*.googleusercontent.com https://*.gstatic.com https://*.oaistatic.com https://*.oaiusercontent.com https://*.openai.com https://*.anthropic.com; base-uri 'self'; form-action 'self'"
  },
  "optional_host_permissions": [
    "https://*.oaiusercontent.com/*",
    "https://*.oaistatic.com/*",
    "https://*.openai.com/*",
    "https://*.googleusercontent.com/*",
    "https://*.gstatic.com/*",
    "https://*.anthropic.com/*"
  ]
}
