{
  "manifest_version": 3,
  "name": "AI Chat Exporter (Ultimate)",
  "version": "0.9.31",
  "description": "Industrial-grade multi-platform chat extraction. Supports ChatGPT Canvas, Claude 3.5, Gemini, and AI Studio. Secure local-first.",
  "action": {
    "default_popup": "index.html",
    "default_title": "AI Chat Exporter v0.9.31"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs", "downloads"],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*", 
        "*://gemini.google.com/*", 
        "*://claude.ai/*",
        "*://aistudio.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}